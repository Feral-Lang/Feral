let stat = import('std/stat');

let st1 = stat.stat(__SRC_DIR__ + '/stat.fer');
let st2 = stat.stat('/dev/zero');

assert(st1.isreg());
assert(!st1.isdir());
assert(!st1.ischr());
assert(!st1.isblk());
assert(!st1.isfifo());
assert(!st1.islnk());
assert(!st1.issock());

assert(!st2.isreg());
assert(!st2.isdir());
assert(st2.ischr());
assert(!st2.isblk());
assert(!st2.isfifo());
assert(!st2.islnk());
assert(!st2.issock());