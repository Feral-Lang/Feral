# consider: | => up arrow

# 3 |||| 4 => 3 ||| 3 ||| 3 ||| 3
# 3 ||| 3 => 3 || 3 || 3
# 3 || 3 => 3 | 3 | 3
# 3 | 3 => 3 ^ 3

# 3 || 3 => 3 | 3 | 3
# 3 | 3 => 3 ^ 3

# 3 ||| 2 => 3 || 3
# 3 || 3 => 3 | 3 | 3
# 3 | 3 => 3 ^ 3

let x = 3;
let y = 2;
let arrcount = 3;

let calc = fn(a, b, arrcnt) {
	if arrcnt == 1 {
		return a ** b; # a[3]b
	}
	let res = a;
	for let i = 0; i < b - 1; ++i {
		res = calc(a, res, arrcnt - 1);
	}
	return res;
};

assert(calc(x, y, arrcount) == 7625597484987);