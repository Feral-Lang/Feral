let lang = import('std/lang');

let stat_t = lang.struct(
	dev = 0,
	ino = 0,
	mode = 0,
	nlink = 0,
	uid = 0,
	gid = 0,
	rdev = 0,
	size = 0,
	atime = 0,
	mtime = 0,
	ctime = 0,
	blksize = 0,
	blocks = 0
);

mload('std/stat');

let stat = fn(of) {
	let st = stat_t();
	stat_native(st, of);
	return st;
};