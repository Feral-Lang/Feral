#include "VM/Interpreter.hpp"

namespace fer
{

FERAL_FUNC(nilEQ, 1, false,
           "  var.fn(other) -> Str\n"
           "Returns `true` if `other` is also Nil.")
{
    return args[1]->is<VarNil>() ? vm.getTrue() : vm.getFalse();
}

FERAL_FUNC(nilNE, 1, false,
           "  var.fn(other) -> Str\n"
           "Returns `true` if `other` is not Nil.")
{
    return !args[1]->is<VarNil>() ? vm.getTrue() : vm.getFalse();
}

FERAL_FUNC(nilNot, 0, false,
           "  var.fn() -> Str\n"
           "Returns `true` for Nil.")
{
    return vm.getTrue();
}

} // namespace fer